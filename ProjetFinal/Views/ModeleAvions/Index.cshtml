@model IEnumerable<ProjetFinal.Models.ModeleAvion>

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f2f2f2;
            text-align: left;
        }

        .table tbody tr:hover {
            background-color: #f5f5f5;
        }

    .btn {
        margin-right: 5px;
    }
</style>

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Créer un nouveau</a>
</p>

<p>
    <a class="btn btn-secondary" asp-action="VueNombreAvionsParMarque">Nombre d'avions par marque</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nom du modèle</th>
            <th scope="col">Année de lancement</th>
            <th scope="col">Capacité de passagers</th>
            <th scope="col">Longueur</th>
            <th scope="col">Marque</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NomModele</td>
                <td>@item.AnneeLancement</td>
                <td>@item.CapacitePassagers</td>
                <td>@item.Longueur</td>
                <td>@item.Marque.NomMarque</td>
                <td>
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.ModeleAvionId">Modifier</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ModeleAvionId">Détails</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ModeleAvionId">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
