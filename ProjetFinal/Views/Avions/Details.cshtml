@model ProjetFinal.Models.Avion

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Avion</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateFabrication)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateFabrication)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Poids)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Poids)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModeleAvion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModeleAvion.ModeleAvionId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Performance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Performance.PerformanceId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BonusSecret)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BonusSecret)
        </dd>
    </dl>
</div>

<div>
    <form asp-action="TelechargerImage" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="file">Télécharger une image</label>
            <input type="file" name="file" class="form-control" />
        </div>
        <input type="hidden" name="id" value="@Model.AvionId" />
        <button type="submit" class="btn btn-primary">Télécharger</button>
    </form>
</div>

<div>
    @if (Model.ImageData
!= null)
    {
        <h4>Image de l'avion</h4>
        <img src="@Url.Action("AfficherImage", "Avions", new { id = Model.AvionId })" alt="Image de l'avion" class="img-fluid" />
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.AvionId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
